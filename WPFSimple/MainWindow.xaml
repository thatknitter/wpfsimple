<Window x:Class="WPFSimple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="725">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
           <TextBox Width="520" Height="20" IsReadOnly="True"></TextBox>
        <StackPanel HorizontalAlignment="Center" Width="520" VerticalAlignment="Center" Height="200" Orientation="Horizontal">
            <Button x:Name="MyButton" Margin="0,0,10,0"  Width="250" Height="100" Click="MyButton_Click">Left</Button>
            <Button x:Name="YourButton" Margin="10,0,0,0" Width="250" Height="100" Click="YourButton_Click">Right</Button>
        </StackPanel>
        <Button Width="520" Height="40" IsEnabled="False">Reset</Button>
</StackPanel>
</Window>
